@page
@model RazorPages_SampleApp.Pages.Products.EditModel

@{ ViewData["Title"] = "Edit"; }

<h2>Edit</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductID" />
            <div class="form-group">
                <label asp-for="Product.ProductID" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Product.ProductID)</div>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.AverageCustomerRating" class="control-label"></label>
                <input asp-for="Product.AverageCustomerRating" class="form-control" />
                <span asp-validation-for="Product.AverageCustomerRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.PricePerItem" class="control-label"></label>
                <input asp-for="Product.PricePerItem" class="form-control" />
                <span asp-validation-for="Product.PricePerItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductCategory" class="control-label"></label>
                <select asp-for="Product.ProductCategoryID" class="form-control"
                        asp-items="@Model.CategoryNameSL"></select>
                <span asp-validation-for="Product.ProductCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
